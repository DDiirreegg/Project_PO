<Window x:Class="Project_PO.DeletAnyDishFromMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_PO"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DeletAnyDishFromMenu" Height="100" Width="400" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid Background="Aquamarine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBox x:Name="textBoxDelDish"  materialDesign:HintAssist.Hint="Enter ID" Style="{StaticResource MaterialDesignFloatingHintTextBox}" HorizontalAlignment="Center" Margin="0,20,0,0" Width="100"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="delDish" Margin="10,10,10,15" Content="Delete" Click="delDish_Click"></Button>
            <Button x:Name="cancleDel" Margin="10,0,10,0" Background="Red" Content="Cancle" Click="cancleDel_Click"></Button>
        </StackPanel>
        
    </Grid>
</Window>
