<Window x:Class="Project_PO.Delete_Bill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_PO"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="DeletAnyDishFromMenu" Height="100" Width="400" WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">   
    
    <Grid Background="Aquamarine">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Margin="20,10,20,0">Choose bill's Id to delete</Label>
            <ComboBox x:Name="cbBBill" ItemsSource="{Binding idbill}"  Margin="20,20,20,0">



            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button x:Name="delBill" Margin="10,10,10,15" Content="Delete" Click="delBill_Click"/>
            <Button x:Name="cancelBill" Margin="10,0,10,0" Background="Red" Content="Cancle" Click="cancelBill_Click"/>
        </StackPanel>

    </Grid>
</Window>

